<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="300.0"
            prefHeight="600.0" prefWidth="450.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="snorax.ui.MainWindow"
            style="-fx-background-color: #1e1e2e;">

    <ScrollPane fx:id="scrollPane"
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="56.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                hbarPolicy="NEVER"
                fitToWidth="true"
                style="-fx-background: #1e1e2e; -fx-background-color: #1e1e2e; -fx-border-color: transparent;">
        <VBox fx:id="dialogContainer" spacing="8.0"
              style="-fx-background-color: #1e1e2e;">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
        </VBox>
    </ScrollPane>

    <HBox AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          spacing="8.0"
          style="-fx-background-color: #2a2a3e; -fx-padding: 8px;">
        <TextField fx:id="userInput"
                   HBox.hgrow="ALWAYS"
                   promptText="Type a command..."
                   onAction="#handleUserInput"
                   style="-fx-background-color: #3a3a5e;
                          -fx-text-fill: #cdd6f4;
                          -fx-prompt-text-fill: #6c7086;
                          -fx-border-color: #585b70;
                          -fx-border-radius: 8;
                          -fx-background-radius: 8;
                          -fx-font-size: 13px;
                          -fx-padding: 8px;"/>
        <Button fx:id="sendButton"
                text="Send"
                onAction="#handleUserInput"
                style="-fx-background-color: #89b4fa;
                       -fx-text-fill: #1e1e2e;
                       -fx-font-weight: bold;
                       -fx-background-radius: 8;
                       -fx-padding: 8px 16px;
                       -fx-cursor: hand;"/>
    </HBox>
</AnchorPane>
